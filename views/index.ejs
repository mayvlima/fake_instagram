<!DOCTYPE html>
<html>

<head>
  <title>Fake Instagram</title>
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel='stylesheet' href='/css/style.css' />
</head>

<body>
  <header>
    <div class="container header">
      <div id="logo">
        <img src="/img/logo.png">
      </div>
      <div class="busca">
        <form>
          <input type="search" class="search" placeholder="buscar usuarios">
        </form>
      </div>
      <nav>
        <a href="http://">
          <img src="/img/icons/home.svg">
        </a>
        <a href="">
          <div class="avatar-content">
            <img class="avatar" src="/img/avatar-example.png">
            <b><%= user.username %></b>
          </div>
        </a>
      </nav>
    </div>
  </header>
  <main class="container content">
    <% listaDePublications.forEach((publication,index)=>{ %>
    <div class="card">
      <div class="card-header">
        <div>
          <img class="avatar" src="/img/avatar-example.png">
          <b><%= publication.user.username %></b>
        </div>
        <img src="/img/icons/more-vertical.svg">
      </div>
      <div class="card-img">
        <img src="<%= publication.image %>">
      </div>
      <div class="card-body">
        <div class="card-itens">
          <div class="likes">
            <img src="/img/icons/heart.svg">
            <b><%= publication.like %> likes</b>
          </div>
          <b><%= dataFormatada[index]  %></b>
        </div>
        <div class="card-comments">
          <% publication.comments.forEach(comment=> { %>
          <p><b><%= comment.user.username %> </b><%= comment.description%></p>
          <%})%>          
        </div>

      </div>
      <form class="form-comments" action="/home/<%= publication.id %>" method="POST">
        <input type="text" name="description" id="description" placeholder="Adicione um comentÃ¡rio...">
        <button>Publicar</button>
      </form>
      
    </div>
    <%})%>
    
  </main>
</body>

</html>